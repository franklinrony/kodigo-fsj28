{% extends "base.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold">
                <i class="fas fa-info-circle text-primary me-3"></i>
                {{ title }}
            </h1>
        </div>
        
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-code text-success me-2"></i>
                    Sobre este proyecto
                </h5>
                <p class="card-text">{{ content }}</p>
                
                <h6 class="mt-4">
                    <i class="fas fa-tools text-warning me-2"></i>
                    Tecnologías utilizadas:
                </h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-2"></i>PHP 8.0+</li>
                    <li><i class="fas fa-check text-success me-2"></i>Composer para gestión de dependencias</li>
                    <li><i class="fas fa-check text-success me-2"></i>FastRoute para ruteo</li>
                    <li><i class="fas fa-check text-success me-2"></i>Twig para plantillas</li>
                    <li><i class="fas fa-check text-success me-2"></i>Bootstrap 5 para el diseño</li>
                </ul>
                
                <div class="mt-4">
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Volver al inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 