{% extends "layout.twig" %}

{% block title %}{{ titulo }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Encabezado -->
            <div class="text-center mb-4">
                <h1 class="display-4">
                    <i class="bi bi-collection"></i>
                    {{ titulo }}
                </h1>
                <p class="lead text-muted">
                    Todos los ejemplos predefinidos del ejercicio Birthday Cake Candles
                </p>
            </div>

            <!-- Resultados de Ejemplos -->
            <div class="row">
                {% for i, item in resultados %}
                    {% set ejemplo = item.ejemplo %}
                    {% set resultado = item.resultado %}
                    
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-list-check"></i>
                                    {{ ejemplo.nombre }}
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Input:</h6>
                                        <div class="mb-2">
                                            <div class="d-flex flex-wrap gap-1">
                                                {% for altura in ejemplo.candles %}
                                                <span class="badge bg-primary">{{ altura }}</span>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Output:</h6>
                                        <div class="text-center">
                                            <span class="badge bg-success fs-5">
                                                <i class="bi bi-cake2"></i>
                                                {{ resultado.resultado }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                
                                <hr>
                                
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="text-muted">Detalles:</h6>
                                        <div class="mb-2">
                                            <small class="text-muted">Número de velas:</small>
                                            <span class="badge bg-info">{{ resultado.n }}</span>
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">Altura máxima:</small>
                                            <span class="badge bg-warning">{{ resultado.altura_maxima }}</span>
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">Velas más altas:</small>
                                            <span class="badge bg-success">{{ resultado.conteo }}</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <h6 class="text-muted">Visualización:</h6>
                                    <div class="d-flex flex-wrap gap-1 mb-2">
                                        {% for i, altura in resultado.candles %}
                                            {% if i in resultado.posiciones %}
                                                <div class="text-center">
                                                    <div class="badge bg-success">{{ altura }}</div>
                                                    <div class="small text-muted">Pos {{ i }}</div>
                                                </div>
                                            {% else %}
                                                <div class="text-center">
                                                    <div class="badge bg-secondary">{{ altura }}</div>
                                                    <div class="small text-muted">Pos {{ i }}</div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle"></i>
                                        {{ ejemplo.descripcion }}
                                    </small>
                                </div>
                                
                                <div class="mt-2">
                                    <small class="text-success">
                                        <i class="bi bi-check-circle"></i>
                                        El niño puede soplar {{ resultado.conteo }} vela{{ resultado.conteo != 1 ? 's' : '' }} más alta{{ resultado.conteo != 1 ? 's' : '' }}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Botones de Acción -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                <a href="/ejercicios/birthday-cake-candles" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i>
                    Volver al Ejercicio
                </a>
                <a href="/ejercicios" class="btn btn-secondary">
                    <i class="bi bi-house"></i>
                    Ir al Inicio
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %} 