{% extends "layout.twig" %}

{% block title %}{{ titulo }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Encabezado -->
            <div class="text-center mb-4">
                <h1 class="display-4">
                    <i class="bi bi-collection"></i>
                    {{ titulo }}
                </h1>
                <p class="lead text-muted">
                    Todos los ejemplos predefinidos del ejercicio Strong Password
                </p>
            </div>

            <!-- Resultados de Ejemplos -->
            <div class="row">
                {% for i, item in resultados %}
                    {% set ejemplo = item.ejemplo %}
                    {% set resultado = item.resultado %}
                    
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-list-check"></i>
                                    {{ ejemplo.nombre }}
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Input:</h6>
                                        <div class="mb-2">
                                            <code class="bg-light px-2 py-1 rounded">{{ ejemplo.password }}</code>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Output:</h6>
                                        <div class="text-center">
                                            <span class="badge bg-success fs-5">
                                                <i class="bi bi-shield-check"></i>
                                                {{ resultado.resultado }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                
                                <hr>
                                
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="text-muted">Detalles:</h6>
                                        <div class="mb-2">
                                            <small class="text-muted">Longitud:</small>
                                            <span class="badge bg-info">{{ resultado.longitud }}</span>
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">Estado:</small>
                                            {% if resultado.es_fuerte %}
                                                <span class="badge bg-success">Fuerte</span>
                                            {% else %}
                                                <span class="badge bg-warning">Débil</span>
                                            {% endif %}
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">Caracteres necesarios:</small>
                                            <span class="badge bg-primary">{{ resultado.resultado }}</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <h6 class="text-muted">Criterios:</h6>
                                    <div class="d-flex flex-wrap gap-1 mb-2">
                                        {% if resultado.tiene_numeros %}
                                            <span class="badge bg-success">✓ Dígitos</span>
                                        {% else %}
                                            <span class="badge bg-danger">✗ Dígitos</span>
                                        {% endif %}
                                        
                                        {% if resultado.tiene_minusculas %}
                                            <span class="badge bg-success">✓ Minúsculas</span>
                                        {% else %}
                                            <span class="badge bg-danger">✗ Minúsculas</span>
                                        {% endif %}
                                        
                                        {% if resultado.tiene_mayusculas %}
                                            <span class="badge bg-success">✓ Mayúsculas</span>
                                        {% else %}
                                            <span class="badge bg-danger">✗ Mayúsculas</span>
                                        {% endif %}
                                        
                                        {% if resultado.tiene_especiales %}
                                            <span class="badge bg-success">✓ Especiales</span>
                                        {% else %}
                                            <span class="badge bg-danger">✗ Especiales</span>
                                        {% endif %}
                                        
                                        {% if resultado.longitud >= 6 %}
                                            <span class="badge bg-success">✓ Longitud ≥ 6</span>
                                        {% else %}
                                            <span class="badge bg-danger">✗ Longitud ≥ 6</span>
                                        {% endif %}
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle"></i>
                                        {{ ejemplo.descripcion }}
                                    </small>
                                </div>
                                
                                <div class="mt-2">
                                    {% if resultado.es_fuerte %}
                                        <small class="text-success">
                                            <i class="bi bi-check-circle"></i>
                                            Contraseña fuerte - no necesita cambios
                                        </small>
                                    {% else %}
                                        <small class="text-warning">
                                            <i class="bi bi-exclamation-triangle"></i>
                                            Necesita {{ resultado.resultado }} caracteres más para ser fuerte
                                        </small>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Botones de Acción -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                <a href="/ejercicios/strong-password" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i>
                    Volver al Ejercicio
                </a>
                <a href="/ejercicios" class="btn btn-secondary">
                    <i class="bi bi-house"></i>
                    Ir al Inicio
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %} 