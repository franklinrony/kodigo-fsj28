{% extends "layout.twig" %}

{% block title %}{{ titulo }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Encabezado -->
            <div class="text-center mb-4">
                <h1 class="display-4">
                    <i class="bi bi-collection"></i>
                    {{ titulo }}
                </h1>
                <p class="lead text-muted">
                    Todos los ejemplos predefinidos del ejercicio Merge Sort
                </p>
            </div>

            <!-- Resultados de Ejemplos -->
            <div class="row">
                {% for i, item in resultados %}
                    {% set ejemplo = item.ejemplo %}
                    {% set resultado = item.resultado %}
                    
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-list-check"></i>
                                    {{ ejemplo.nombre }}
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Input:</h6>
                                        <div class="mb-2">
                                            <code class="bg-light px-2 py-1 rounded">[{{ ejemplo.array|join(', ') }}]</code>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Output:</h6>
                                        <div class="mb-2">
                                            <code class="bg-light px-2 py-1 rounded">[{{ resultado.resultado|join(', ') }}]</code>
                                        </div>
                                    </div>
                                </div>
                                
                                <hr>
                                
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="text-muted">Detalles:</h6>
                                        <div class="mb-2">
                                            <small class="text-muted">Longitud:</small>
                                            <span class="badge bg-info">{{ resultado.longitud }}</span>
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">Complejidad:</small>
                                            <span class="badge bg-primary">O(n log n)</span>
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">Estable:</small>
                                            <span class="badge bg-success">Sí</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <h6 class="text-muted">Comparación Visual:</h6>
                                    <div class="mb-2">
                                        <small class="text-muted">Original:</small>
                                        <div>
                                            {% for elemento in resultado.array_original %}
                                            <span class="badge bg-secondary me-1 mb-1">{{ elemento }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted">Ordenado:</small>
                                        <div>
                                            {% for elemento in resultado.resultado %}
                                            <span class="badge bg-success me-1 mb-1">{{ elemento }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle"></i>
                                        {{ ejemplo.descripcion }}
                                    </small>
                                </div>
                                
                                <div class="mt-2">
                                    <small class="text-success">
                                        <i class="bi bi-check-circle"></i>
                                        Ordenamiento completado exitosamente
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Botones de Acción -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                <a href="/ejercicios/merge-sort" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i>
                    Volver al Ejercicio
                </a>
                <a href="/ejercicios" class="btn btn-secondary">
                    <i class="bi bi-house"></i>
                    Ir al Inicio
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %} 