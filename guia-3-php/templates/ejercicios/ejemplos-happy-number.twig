{% extends "layout.twig" %}

{% block title %}{{ titulo }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Encabezado -->
            <div class="text-center mb-4">
                <h1 class="display-4">
                    <i class="bi bi-collection"></i>
                    {{ titulo }}
                </h1>
                <p class="lead text-muted">
                    Todos los ejemplos predefinidos del ejercicio Happy Number
                </p>
            </div>

            <!-- Resultados de Ejemplos -->
            <div class="row">
                {% for i, item in resultados %}
                    {% set ejemplo = item.ejemplo %}
                    {% set resultado = item.resultado %}
                    
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-list-check"></i>
                                    {{ ejemplo.nombre }}
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Input:</h6>
                                        <div class="text-center mb-2">
                                            <span class="badge bg-primary fs-5">{{ ejemplo.n }}</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Output:</h6>
                                        <div class="text-center">
                                            {% if resultado.resultado %}
                                                <span class="badge bg-success fs-5">
                                                    <i class="bi bi-emoji-smile"></i>
                                                    TRUE
                                                </span>
                                            {% else %}
                                                <span class="badge bg-danger fs-5">
                                                    <i class="bi bi-emoji-frown"></i>
                                                    FALSE
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                
                                <hr>
                                
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="text-muted">Detalles:</h6>
                                        <div class="mb-2">
                                            <small class="text-muted">Iteraciones:</small>
                                            <span class="badge bg-info">{{ resultado.iteraciones }}</span>
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">Estado:</small>
                                            {% if resultado.es_feliz %}
                                                <span class="badge bg-success">Feliz</span>
                                            {% else %}
                                                <span class="badge bg-danger">No Feliz</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <h6 class="text-muted">Secuencia:</h6>
                                    <div class="d-flex flex-wrap gap-1 mb-2">
                                        {% for numero in resultado.secuencia %}
                                            {% if loop.last and resultado.es_feliz %}
                                                <span class="badge bg-success">{{ numero }}</span>
                                            {% else %}
                                                <span class="badge bg-primary">{{ numero }}</span>
                                            {% endif %}
                                            {% if not loop.last %}
                                                <i class="bi bi-arrow-right text-muted"></i>
                                            {% endif %}
                                        {% endfor %}
                                        {% if resultado.es_feliz %}
                                            <i class="bi bi-arrow-right text-muted"></i>
                                            <span class="badge bg-success">1</span>
                                        {% endif %}
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle"></i>
                                        {{ ejemplo.descripcion }}
                                    </small>
                                </div>
                                
                                <div class="mt-2">
                                    {% if resultado.es_feliz %}
                                        <small class="text-success">
                                            <i class="bi bi-check-circle"></i>
                                            Número feliz - termina en 1
                                        </small>
                                    {% else %}
                                        <small class="text-danger">
                                            <i class="bi bi-x-circle"></i>
                                            Número no feliz - ciclo infinito
                                        </small>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Botones de Acción -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                <a href="/ejercicios/happy-number" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i>
                    Volver al Ejercicio
                </a>
                <a href="/ejercicios" class="btn btn-secondary">
                    <i class="bi bi-house"></i>
                    Ir al Inicio
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %} 