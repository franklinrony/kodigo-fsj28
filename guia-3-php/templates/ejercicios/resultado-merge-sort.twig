{% extends "layout.twig" %}

{% block title %}{{ titulo }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Encabezado -->
            <div class="text-center mb-4">
                <h1 class="display-4">
                    <i class="bi bi-arrow-down-up"></i>
                    {{ titulo }}
                </h1>
                <p class="lead text-muted">
                    Resultado del ejercicio Merge Sort
                </p>
            </div>

            {% if resultado.error %}
            <!-- Error de Validación -->
            <div class="card mb-4">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i>
                        Error de Validación
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle"></i>
                        {{ resultado.error }}
                    </div>
                </div>
            </div>
            {% else %}
            <!-- Resultado -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-check-circle"></i>
                        Resultado
                    </h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <h2 class="display-4 text-success">
                            <i class="bi bi-arrow-down-up"></i>
                            ¡Ordenamiento Completado!
                        </h2>
                        <p class="lead">
                            El array ha sido ordenado exitosamente usando el algoritmo Merge Sort
                        </p>
                    </div>
                </div>
            </div>

            <!-- Información del Algoritmo -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-gear"></i>
                        Información del Algoritmo
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Detalles del Array:</h6>
                            <ul class="list-unstyled">
                                <li><strong>Array original:</strong> <code>[{{ resultado.array_original|join(', ') }}]</code></li>
                                <li><strong>Array ordenado:</strong> <code>[{{ resultado.resultado|join(', ') }}]</code></li>
                                <li><strong>Longitud:</strong> {{ resultado.longitud }} elementos</li>
                                <li><strong>Algoritmo:</strong> {{ resultado.algoritmo }}</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Complejidad:</h6>
                            <div class="mb-2">
                                <span class="badge bg-primary">Tiempo: O(n log n)</span>
                            </div>
                            <div class="mb-2">
                                <span class="badge bg-secondary">Espacio: O(n)</span>
                            </div>
                            <div class="mb-2">
                                <span class="badge bg-success">Estable: Sí</span>
                            </div>
                            <div class="mb-2">
                                <span class="badge bg-info">In-place: No</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Comparación Visual -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-eye"></i>
                        Comparación Visual
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Array Original:</h6>
                            <div class="border rounded p-3 bg-light">
                                {% for elemento in resultado.array_original %}
                                <span class="badge bg-secondary me-1 mb-1">{{ elemento }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Array Ordenado:</h6>
                            <div class="border rounded p-3 bg-light">
                                {% for elemento in resultado.resultado %}
                                <span class="badge bg-success me-1 mb-1">{{ elemento }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-3 text-center">
                        <i class="bi bi-arrow-down display-4 text-primary"></i>
                    </div>
                    
                    <div class="mt-3">
                        <h6 class="text-muted">Leyenda:</h6>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-secondary">Original</span>
                            <span class="badge bg-success">Ordenado</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pasos Detallados -->
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-list-ol"></i>
                        Pasos Detallados del Algoritmo
                    </h4>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        {% for paso in resultado.pasos %}
                        <div class="list-group-item">
                            <i class="bi bi-arrow-right text-primary"></i>
                            {{ paso }}
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Botones de Acción -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a href="/ejercicios/merge-sort" class="btn btn-primary me-md-2">
                    <i class="bi bi-arrow-left"></i>
                    Probar Otro Array
                </a>
                <a href="/ejercicios/merge-sort/ejemplos" class="btn btn-info me-md-2">
                    <i class="bi bi-collection"></i>
                    Ver Todos los Ejemplos
                </a>
                <a href="/ejercicios" class="btn btn-secondary">
                    <i class="bi bi-house"></i>
                    Ir al Inicio
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %} 