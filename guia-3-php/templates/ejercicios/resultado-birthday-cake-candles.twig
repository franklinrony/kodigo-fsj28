{% extends "layout.twig" %}

{% block title %}{{ titulo }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Encabezado -->
            <div class="text-center mb-4">
                <h1 class="display-4">
                    <i class="bi bi-cake2"></i>
                    {{ titulo }}
                </h1>
                <p class="lead text-muted">
                    Resultado del ejercicio Birthday Cake Candles
                </p>
            </div>

            {% if resultado.error %}
            <!-- Error de Validación -->
            <div class="card mb-4">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i>
                        Error de Validación
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle"></i>
                        {{ resultado.error }}
                    </div>
                </div>
            </div>
            {% else %}
            <!-- Resultado -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-check-circle"></i>
                        Resultado
                    </h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <h2 class="display-4 text-success">
                            <i class="bi bi-cake2"></i>
                            {{ resultado.resultado }}
                        </h2>
                        <p class="lead">
                            El niño puede soplar <strong>{{ resultado.resultado }}</strong> vela{{ resultado.resultado != 1 ? 's' : '' }} más alta{{ resultado.resultado != 1 ? 's' : '' }}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Información del Algoritmo -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-gear"></i>
                        Información del Algoritmo
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Detalles:</h6>
                            <ul class="list-unstyled">
                                <li><strong>Número de velas:</strong> {{ resultado.n }}</li>
                                <li><strong>Altura máxima:</strong> {{ resultado.altura_maxima }}</li>
                                <li><strong>Velas más altas:</strong> {{ resultado.conteo }}</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Posiciones de velas más altas:</h6>
                            <div class="d-flex flex-wrap gap-1">
                                {% for posicion in resultado.posiciones %}
                                    <span class="badge bg-success">{{ posicion }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Visualización de las Velas -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-eye"></i>
                        Visualización de las Velas
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <h6 class="text-muted">Alturas de las velas:</h6>
                            <div class="d-flex flex-wrap gap-2 mb-3">
                                {% for i, altura in resultado.candles %}
                                    {% if i in resultado.posiciones %}
                                        <div class="text-center">
                                            <div class="badge bg-success fs-6 mb-1">{{ altura }}</div>
                                            <div class="small text-muted">Pos {{ i }}</div>
                                        </div>
                                    {% else %}
                                        <div class="text-center">
                                            <div class="badge bg-secondary fs-6 mb-1">{{ altura }}</div>
                                            <div class="small text-muted">Pos {{ i }}</div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i>
                                Verde = vela más alta, Gris = vela normal
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pasos Detallados -->
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-list-ol"></i>
                        Pasos Detallados
                    </h4>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        {% for paso in resultado.pasos %}
                        <div class="list-group-item">
                            <i class="bi bi-arrow-right text-primary"></i>
                            {{ paso }}
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Botones de Acción -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a href="/ejercicios/birthday-cake-candles" class="btn btn-primary me-md-2">
                    <i class="bi bi-arrow-left"></i>
                    Probar Otras Velas
                </a>
                <a href="/ejercicios/birthday-cake-candles/ejemplos" class="btn btn-info me-md-2">
                    <i class="bi bi-collection"></i>
                    Ver Todos los Ejemplos
                </a>
                <a href="/ejercicios" class="btn btn-secondary">
                    <i class="bi bi-house"></i>
                    Ir al Inicio
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %} 